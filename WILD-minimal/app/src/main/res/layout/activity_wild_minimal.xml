<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WildMinimalActivity">

    <TextView
        android:id="@+id/range_textview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/black"
        android:text="WILD minimal - Rev 0.1"
        android:textAlignment="textStart"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:typeface="monospace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/label"
        android:layout_width="100dp"
        android:layout_height="47dp"
        android:background="@android:color/white"
        android:text="Recorded Distance"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:typeface="monospace"
        app:layout_constraintBottom_toBottomOf="@id/range_textview"
        app:layout_constraintStart_toStartOf="@id/range_textview" />


    <Button
        android:id="@+id/record_btn"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="68dp"
        android:text="Record"
        app:layout_constraintBottom_toBottomOf="@id/range_textview"
        app:layout_constraintRight_toRightOf="@id/range_textview" />

    <Button
        android:id="@+id/stop_btn"
        android:layout_width="63dp"
        android:layout_height="wrap_content"
        android:text="Stop"
        app:layout_constraintBottom_toBottomOf="@id/range_textview"
        app:layout_constraintEnd_toEndOf="@id/range_textview"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintRight_toRightOf="@id/range_textview"
        app:layout_constraintStart_toStartOf="@id/label"
        app:layout_constraintTop_toTopOf="@id/label"
        app:layout_constraintVertical_bias="0.612" />
</androidx.constraintlayout.widget.ConstraintLayout>
